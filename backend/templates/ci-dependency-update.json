{
  "id": "ci-dependency-update",
  "title": "CI: Dependency Update",
  "description": "Run automated dependency updates, create PRs and run tests for verification.",
  "category": "CI/CD",
  "tags": ["ci", "dependencies", "automation"],
  "sample_input": { "repo": "org/repo" },
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": { "x": 0, "y": 0 },
        "data": { "label": "Weekly" }
      },
      {
        "id": "run_bot",
        "type": "http",
        "position": { "x": 220, "y": 0 },
        "data": {
          "label": "Run update bot",
          "config": {
            "method": "POST",
            "url": "https://deps.api/update",
            "body": "{{ trigger.repo }}"
          }
        }
      },
      {
        "id": "create_pr",
        "type": "http",
        "position": { "x": 440, "y": 0 },
        "data": {
          "label": "Create PR",
          "config": {
            "method": "POST",
            "url": "https://git.api/pr",
            "body": "{{ node_results.run_bot }}"
          }
        }
      },
      {
        "id": "run_tests",
        "type": "http",
        "position": { "x": 660, "y": 0 },
        "data": {
          "label": "Run tests",
          "config": {
            "method": "POST",
            "url": "https://ci.api/run",
            "body": "{{ node_results.create_pr }}"
          }
        }
      }
    ],
    "edges": [
      { "id": "e1", "source": "in", "target": "run_bot" },
      { "id": "e2", "source": "run_bot", "target": "create_pr" },
      { "id": "e3", "source": "create_pr", "target": "run_tests" }
    ]
  }
}
