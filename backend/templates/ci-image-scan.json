{
  "id": "ci-image-scan",
  "title": "CI: Image Vulnerability Scan",
  "description": "Scan container images on build, fail pipeline on critical vulnerabilities and create tickets for triage.",
  "category": "CI/CD",
  "tags": ["ci","security","scan"],
  "sample_input": {"image":"registry/app:latest"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Build event"}
      },
      {
        "id": "scan",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Scan Image",
          "config": {
            "method": "POST",
            "url": "https://scanner.api/scan",
            "body": "{\"image\":\"{{ trigger.image }}\"}"
          }
        }
      },
      {
        "id": "eval",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Evaluate",
          "config": {
            "language": "python",
            "code": "r = json.loads(input.get('body','{}'))\ncrit = [v for v in r.get('vulns',[]) if v.get('severity')=='critical']\nif crit:\n    return {'fail': True,'count': len(crit)}\nreturn {'fail': False}"
          }
        }
      },
      {
        "id": "fail_pipeline",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Fail Pipeline",
          "config": {
            "method": "POST",
            "url": "https://ci.api/pipelines/{{ trigger.pipeline_id }}/fail"
          }
        }
      },
      {
        "id": "create_ticket",
        "type": "http",
        "position": {"x": 660, "y": 120},
        "data": {
          "label": "Create Security Ticket",
          "config": {
            "method": "POST",
            "url": "https://security.api/tickets",
            "body": "{{ node_results.eval }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "scan"},
      {"id": "e2", "source": "scan", "target": "eval"},
      {"id": "e3", "source": "eval", "target": "fail_pipeline"},
      {"id": "e4", "source": "eval", "target": "create_ticket"}
    ]
  }
}
