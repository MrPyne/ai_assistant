{
  "id": "ci-pipeline-retry",
  "title": "CI: Pipeline Retry",
  "description": "On transient pipeline failures, retry the failed jobs up to N times with backoff and notify team if still failing.",
  "category": "CI/CD",
  "tags": ["ci","retry","backoff"],
  "sample_input": {"pipeline_id":"p-1","max_retries":3},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Failure webhook"}
      },
      {
        "id": "evaluate",
        "type": "action",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Is Transient?",
          "config": {
            "language": "python",
            "code": "e = json.loads(trigger.get('event','{}'))\nif e.get('error_type')=='transient':\n    return {'transient': True}\nreturn {'transient': False}"
          }
        }
      },
      {
        "id": "retry",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Retry Logic",
          "config": {
            "language": "python",
            "code": "# invoke CI retry API up to max_retries\nreturn {'retried': True}"
          }
        }
      },
      {
        "id": "notify",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Notify Team",
          "config": {
            "method": "POST",
            "url": "https://hooks.slack.com/services/...",
            "body": "Pipeline {{ trigger.pipeline_id }} retried"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "evaluate"},
      {"id": "e2", "source": "evaluate", "target": "retry"},
      {"id": "e3", "source": "retry", "target": "notify"}
    ]
  }
}
