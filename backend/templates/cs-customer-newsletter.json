{
  "id": "cs-customer-newsletter",
  "title": "Customer Success: Customer Newsletter",
  "description": "Compile product updates and send a monthly newsletter tailored to customer segments.",
  "category": "Customer Success",
  "tags": ["cs", "newsletter", "communication"],
  "sample_input": {
    "month": "2025-08"
  },
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": { "x": 0, "y": 0 },
        "data": { "label": "Monthly" }
      },
      {
        "id": "fetch_updates",
        "type": "http",
        "position": { "x": 220, "y": 0 },
        "data": {
          "label": "Fetch product updates",
          "config": {
            "method": "GET",
            "url": "https://product.api/updates?month={{ trigger.month }}"
          }
        }
      },
      {
        "id": "compose",
        "type": "llm",
        "position": { "x": 440, "y": 0 },
        "data": {
          "label": "Compose newsletter",
          "config": {
            "prompt": "Write a friendly customer newsletter from these updates: {{ node_results.fetch_updates }}"
          }
        }
      },
      {
        "id": "send",
        "type": "http",
        "position": { "x": 660, "y": 0 },
        "data": {
          "label": "Send",
          "config": {
            "method": "POST",
            "url": "https://email.api/send",
            "body": "{{ node_results.compose }}"
          }
        }
      }
    ],
    "edges": [
      { "id": "e1", "source": "in", "target": "fetch_updates" },
      { "id": "e2", "source": "fetch_updates", "target": "compose" },
      { "id": "e3", "source": "compose", "target": "send" }
    ]
  }
}
