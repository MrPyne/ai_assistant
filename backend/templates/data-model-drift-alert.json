{
  "id": "data-model-drift-alert",
  "title": "Data: Model Drift Alert",
  "description": "Monitor model predictions vs ground truth and alert when drift thresholds are exceeded.",
  "category": "Data/Analytics",
  "tags": ["data","ml","monitoring"],
  "sample_input": {"model_id":"m-1"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Daily"}
      },
      {
        "id": "fetch_metrics",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch model metrics",
          "config": {
            "method": "GET",
            "url": "https://ml.api/models/{{ trigger.model_id }}/metrics"
          }
        }
      },
      {
        "id": "evaluate",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Evaluate drift",
          "config": {
            "language": "python",
            "code": "m = node_results.fetch_metrics\\nif m.get('population_change',0) > 0.1:\\n  return {'drift':True}\\nreturn {'drift':False}"
          }
        }
      },
      {
        "id": "alert",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Alert data team",
          "config": {
            "method": "POST",
            "url": "https://slack.api/post",
            "body": "Model drift detected"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_metrics"},
      {"id": "e2", "source": "fetch_metrics", "target": "evaluate"},
      {"id": "e3", "source": "evaluate", "target": "alert"}
    ]
  }
}
