{
  "id": "data-report-delivery",
  "title": "Data: Report Delivery",
  "description": "Generate scheduled reports and deliver them to stakeholders via email or Slack.",
  "category": "Data/Analytics",
  "tags": ["data", "reports", "delivery"],
  "sample_input": {"report": "weekly_usage", "recipients": ["team@example.com"]},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Schedule"}
      },
      {
        "id": "generate",
        "type": "action",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Generate report",
          "config": {
            "language": "python",
            "code": "# run report query and format as csv\\nreturn 'col1,col2\\n1,2'"
          }
        }
      },
      {
        "id": "upload",
        "type": "http",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Upload",
          "config": {"method": "POST", "url": "https://files.api/upload", "body": "{{ node_results.generate }}"}
        }
      },
      {
        "id": "notify",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Notify",
          "config": {
            "method": "POST",
            "url": "https://email.api/send",
            "body": "{\"to\":\"{{ trigger.recipients[0] }}\",\"body\":\"Report ready: {{ node_results.upload.url }}\"}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "generate"},
      {"id": "e2", "source": "generate", "target": "upload"},
      {"id": "e3", "source": "upload", "target": "notify"}
    ]
  }
}
