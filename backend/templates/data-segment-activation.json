{
  "id": "data-segment-activation",
  "title": "Data: Segment Activation",
  "description": "Convert analytics segments into audience lists and activate them in downstream ad/email platforms.",
  "category": "Data/Analytics",
  "tags": ["data", "audience", "activation"],
  "sample_input": {"segment_id": "seg-1"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Trigger"}
      },
      {
        "id": "query_segment",
        "type": "action",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Query segment",
          "config": {
            "language": "sql",
            "code": "SELECT user_id FROM segments WHERE id='{{ trigger.segment_id }}'"
          }
        }
      },
      {
        "id": "upload",
        "type": "http",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Upload audience",
          "config": {
            "method": "POST",
            "url": "https://marketing.api/audiences",
            "body": "{{ node_results.query_segment }}"
          }
        }
      },
      {
        "id": "activate",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Activate",
          "config": {
            "method": "POST",
            "url": "https://ads.api/activate",
            "body": "{{ node_results.upload }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "query_segment"},
      {"id": "e2", "source": "query_segment", "target": "upload"},
      {"id": "e3", "source": "upload", "target": "activate"}
    ]
  }
}