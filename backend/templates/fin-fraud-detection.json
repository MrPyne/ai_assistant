{
  "id": "fin-fraud-detection",
  "title": "Finance: Payment Fraud Detection",
  "description": "Score transactions for fraud risk and flag high-risk items for manual review.",
  "category": "Finance",
  "tags": ["finance", "fraud", "risk"],
  "sample_input": {"transaction_id": "tx-1"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Transaction"}
      },
      {
        "id": "fetch",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch txn",
          "config": {
            "method": "GET",
            "url": "https://payments.api/txns/{{ trigger.transaction_id }}"
          }
        }
      },
      {
        "id": "score",
        "type": "llm",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Score risk",
          "config": {
            "prompt": "Score this transaction for fraud risk: {{ node_results.fetch }}"
          }
        }
      },
      {
        "id": "flag",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Flag for review",
          "config": {
            "method": "POST",
            "url": "https://ops.api/flag",
            "body": "{{ node_results.score }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch"},
      {"id": "e2", "source": "fetch", "target": "score"},
      {"id": "e3", "source": "score", "target": "flag"}
    ]
  }
}