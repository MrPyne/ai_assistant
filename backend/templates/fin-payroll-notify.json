{
  "id": "fin-payroll-notify",
  "title": "Finance: Payroll Notification",
  "description": "Send payroll summary to department heads and post summary to internal portal after payroll run completes.",
  "category": "Finance",
  "tags": ["finance", "payroll", "notify"],
  "sample_input": {"payrun_id": "PR-2025-10"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Payroll Completed"}
      },
      {
        "id": "fetch_summary",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch Summary",
          "config": {
            "method": "GET",
            "url": "https://payroll.api/runs/{{ trigger.payrun_id }}/summary"
          }
        }
      },
      {
        "id": "post_portal",
        "type": "http",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Post to Portal",
          "config": {
            "method": "POST",
            "url": "https://intranet.api/announcements",
            "body": "{{ node_results.fetch_summary }}"
          }
        }
      },
      {
        "id": "email",
        "type": "email",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Send Emails",
          "config": {
            "to": ["heads@example.com"],
            "subject": "Payroll {{ trigger.payrun_id }} completed",
            "body": "{{ node_results.fetch_summary }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_summary"},
      {"id": "e2", "source": "fetch_summary", "target": "post_portal"},
      {"id": "e3", "source": "fetch_summary", "target": "email"}
    ]
  }
}