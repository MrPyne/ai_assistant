{
  "id": "hr-benefit-change-audit",
  "title": "HR: Benefit Change Audit",
  "description": "Audit employee benefit changes, detect anomalies and alert HR compliance.",
  "category": "HR",
  "tags": ["hr", "audit", "benefits"],
  "sample_input": {
    "change_id": "chg-1"
  },
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": { "x": 0, "y": 0 },
        "data": { "label": "Change event" }
      },
      {
        "id": "fetch",
        "type": "http",
        "position": { "x": 220, "y": 0 },
        "data": {
          "label": "Fetch change",
          "config": {
            "method": "GET",
            "url": "https://hr.api/benefit_changes/{{ trigger.change_id }}"
          }
        }
      },
      {
        "id": "analyze",
        "type": "llm",
        "position": { "x": 440, "y": 0 },
        "data": {
          "label": "Analyze anomaly",
          "config": {
            "prompt": "Analyze this benefit change for signs of fraud or mistakes: {{ node_results.fetch }}"
          }
        }
      },
      {
        "id": "alert",
        "type": "http",
        "position": { "x": 660, "y": 0 },
        "data": {
          "label": "Alert compliance",
          "config": {
            "method": "POST",
            "url": "https://compliance.api/alerts",
            "body": "{{ node_results.analyze }}"
          }
        }
      }
    ],
    "edges": [
      { "id": "e1", "source": "in", "target": "fetch" },
      { "id": "e2", "source": "fetch", "target": "analyze" },
      { "id": "e3", "source": "analyze", "target": "alert" }
    ]
  }
}
