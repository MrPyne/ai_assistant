{
  "id": "hr-internal-job-posting",
  "title": "HR: Internal Job Posting",
  "description": "Post roles to internal career site and notify employees.",
  "category": "HR",
  "tags": ["hr", "internal", "jobs"],
  "sample_input": {"job_id": "job-1"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "New role"}
      },
      {
        "id": "fetch",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch role",
          "config": {
            "method": "GET",
            "url": "https://hr.api/jobs/{{ trigger.job_id }}"
          }
        }
      },
      {
        "id": "post",
        "type": "http",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Post internal",
          "config": {
            "method": "POST",
            "url": "https://careers.internal/api/post",
            "body": "{{ node_results.fetch }}"
          }
        }
      },
      {
        "id": "notify",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Notify all",
          "config": {
            "method": "POST",
            "url": "https://email.api/bulk",
            "body": "New internal role: {{ node_results.fetch.title }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch"},
      {"id": "e2", "source": "fetch", "target": "post"},
      {"id": "e3", "source": "post", "target": "notify"}
    ]
  }
}
