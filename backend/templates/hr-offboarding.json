{
  "id": "hr-offboarding",
  "title": "HR: Offboarding Checklist",
  "description": "When an employee is offboarded, run a checklist: revoke access, schedule exit interview, and collect equipment returns.",
  "category": "HR",
  "tags": ["hr", "offboarding", "access"],
  "sample_input": {"employee_id": "E-10"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Offboard request"}
      },
      {
        "id": "revoke",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Revoke Access",
          "config": {
            "method": "POST",
            "url": "https://auth.api/users/{{ trigger.employee_id }}/revoke"
          }
        }
      },
      {
        "id": "schedule_exit",
        "type": "http",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Schedule Exit Interview",
          "config": {
            "method": "POST",
            "url": "https://calendar.api/events",
            "body": "{\"title\":\"Exit Interview: {{ trigger.employee_id }}\"}"
          }
        }
      },
      {
        "id": "notify_it",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Notify IT",
          "config": {
            "method": "POST",
            "url": "https://hooks.slack.com/services/...",
            "body": "Please collect equipment for {{ trigger.employee_id }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "revoke"},
      {"id": "e2", "source": "revoke", "target": "schedule_exit"},
      {"id": "e3", "source": "schedule_exit", "target": "notify_it"}
    ]
  }
}