{
  "id": "hr-offer-letter",
  "title": "HR: Offer Letter Generation",
  "description": "Generate and send personalized offer letters; track acceptance and kick off onboarding.",
  "category": "HR",
  "tags": ["hr", "offer", "onboarding"],
  "sample_input": {"candidate_id": "cand-1"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Offer request"}
      },
      {
        "id": "fetch",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch candidate",
          "config": {
            "method": "GET",
            "url": "https://hr.api/candidates/{{ trigger.candidate_id }}"
          }
        }
      },
      {
        "id": "generate",
        "type": "llm",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Generate letter",
          "config": {
            "prompt": "Create a professional offer letter for {{ node_results.fetch }} including compensation and start date."
          }
        }
      },
      {
        "id": "send",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Send email",
          "config": {
            "method": "POST",
            "url": "https://email.api/send",
            "body": "{{ node_results.generate }}"
          }
        }
      },
      {
        "id": "onboard",
        "type": "http",
        "position": {"x": 880, "y": 0},
        "data": {
          "label": "Kick off onboarding",
          "config": {
            "method": "POST",
            "url": "https://hr.api/onboard",
            "body": "{{ trigger.candidate_id }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch"},
      {"id": "e2", "source": "fetch", "target": "generate"},
      {"id": "e3", "source": "generate", "target": "send"},
      {"id": "e4", "source": "send", "target": "onboard"}
    ]
  }
}
