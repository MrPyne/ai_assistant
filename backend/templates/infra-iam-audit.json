{
  "id": "infra-iam-audit",
  "title": "Infrastructure: IAM Audit",
  "description": "Audit IAM policies, list high-permission roles and recommend least-privilege changes.",
  "category": "Infrastructure",
  "tags": ["infra", "iam", "security"],
  "sample_input": {"scope": "org"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Quarterly"}
      },
      {
        "id": "fetch_roles",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch roles",
          "config": {
            "method": "GET",
            "url": "https://cloud.api/roles?scope={{ trigger.scope }}"
          }
        }
      },
      {
        "id": "analyze",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Analyze",
          "config": {
            "language": "python",
            "code": "# find high perms\nreturn {'high_perm': []}"
          }
        }
      },
      {
        "id": "recommend",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Recommend",
          "config": {
            "method": "POST",
            "url": "https://security.api/recommend",
            "body": "{{ node_results.analyze }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_roles"},
      {"id": "e2", "source": "fetch_roles", "target": "analyze"},
      {"id": "e3", "source": "analyze", "target": "recommend"}
    ]
  }
}
