{
  "id": "it-deployment-health-check",
  "title": "IT: Deployment Health Check",
  "description": "After deployment, run smoke tests and verify key endpoints and metrics.",
  "category": "IT/Operations",
  "tags": ["it", "deployments", "health"],
  "sample_input": { "deploy_id": "d-1" },
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": { "x": 0, "y": 0 },
        "data": { "label": "Deploy event" }
      },
      {
        "id": "run_smoke",
        "type": "http",
        "position": { "x": 220, "y": 0 },
        "data": {
          "label": "Run smoke tests",
          "config": {
            "method": "POST",
            "url": "https://ci.api/smoke/{{ trigger.deploy_id }}"
          }
        }
      },
      {
        "id": "check_metrics",
        "type": "http",
        "position": { "x": 440, "y": 0 },
        "data": {
          "label": "Check metrics",
          "config": {
            "method": "GET",
            "url": "https://metrics.api/services/health"
          }
        }
      },
      {
        "id": "notify",
        "type": "http",
        "position": { "x": 660, "y": 0 },
        "data": {
          "label": "Notify team",
          "config": {
            "method": "POST",
            "url": "https://slack.api/post",
            "body": "Deployment {{ trigger.deploy_id }} health OK"
          }
        }
      }
    ],
    "edges": [
      { "id": "e1", "source": "in", "target": "run_smoke" },
      { "id": "e2", "source": "run_smoke", "target": "check_metrics" },
      { "id": "e3", "source": "check_metrics", "target": "notify" }
    ]
  }
}
