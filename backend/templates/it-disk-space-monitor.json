{
  "id": "it-disk-space-monitor",
  "title": "IT: Disk Space Monitor",
  "description": "Monitor disk usage across servers; when usage exceeds threshold create alert and auto-clean temporary files on low priority hosts.",
  "category": "IT",
  "tags": ["it", "monitoring", "alerts"],
  "sample_input": {"threshold_pct": 85},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Scheduler"}
      },
      {
        "id": "fetch_metrics",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {"label": "Fetch Disk Metrics", "config": {"method": "GET", "url": "https://metrics.api/disk"}}
      },
      {
        "id": "eval",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Evaluate",
          "config": {
            "language": "python",
            "code": "m = json.loads(input.get('body','[]'))\\nalerts = [s for s in m if s.get('usage',0) > input.get('threshold_pct',85)]\\nreturn {'alerts': alerts}"
          }
        }
      },
      {
        "id": "clean",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {"label": "Auto-clean", "config": {"method": "POST", "url": "https://agents.api/clean", "body": "{{ node_results.eval.alerts }}"}}
      },
      {
        "id": "notify",
        "type": "http",
        "position": {"x": 660, "y": 120},
        "data": {"label": "Notify Ops", "config": {"method": "POST", "url": "https://hooks.slack.com/services/...", "body": "Disk alerts: {{ node_results.eval.alerts|length }}"}}
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_metrics"},
      {"id": "e2", "source": "fetch_metrics", "target": "eval"},
      {"id": "e3", "source": "eval", "target": "clean"},
      {"id": "e4", "source": "eval", "target": "notify"}
    ]
  }
}
