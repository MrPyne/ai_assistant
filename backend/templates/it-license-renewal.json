{
  "id": "it-license-renewal",
  "title": "IT: License Renewal Reminder",
  "description": "Track upcoming license renewals and notify owners; optionally create renewal tickets with vendors.",
  "category": "IT",
  "tags": ["it","licenses","renewal"],
  "sample_input": {"days_out":30},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Scheduler"}
      },
      {
        "id": "fetch_licenses",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch Licenses",
          "config": {
            "method": "GET",
            "url": "https://it.api/licenses?renew_in={{ trigger.days_out }}"
          }
        }
      },
      {
        "id": "notify_owners",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Notify Owners",
          "config": {
            "language": "python",
            "code": "licenses = json.loads(input.get(\"body\",\"[]\"))\n# send reminders\nreturn {\"notified\": len(licenses)}"
          }
        }
      },
      {
        "id": "create_vendor_ticket",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Create Vendor Ticket",
          "config": {
            "method": "POST",
            "url": "https://vendors.api/tickets",
            "body": "{{ node_results.notify_owners }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_licenses"},
      {"id": "e2", "source": "fetch_licenses", "target": "notify_owners"},
      {"id": "e3", "source": "notify_owners", "target": "create_vendor_ticket"}
    ]
  }
}
