{
  "id": "it-patch-management",
  "title": "IT: Patch Management",
  "description": "Schedule and apply OS/application patches to groups of hosts, report failed updates and retry according to policy.",
  "category": "IT",
  "tags": ["it","patching","ops"],
  "sample_input": {"group_id":"web-servers","policy":{"retries":2}},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Scheduler"}
      },
      {
        "id": "fetch_hosts",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch Hosts",
          "config": {
            "method": "GET",
            "url": "https://inventory.api/groups/{{ trigger.group_id }}/hosts"
          }
        }
      },
      {
        "id": "apply_patch",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Apply Patch",
          "config": {
            "language": "python",
            "code": "hosts = json.loads(input.get('body','[]'))\\nresults = []\\nfor h in hosts:\\n    # call patch agent\\n    results.append({'host':h.get('id'),'status':'ok'})\\nreturn {'results': results}"
          }
        }
      },
      {
        "id": "report",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Report Results",
          "config": {
            "method": "POST",
            "url": "https://ops.api/patch-report",
            "body": "{{ node_results.apply_patch }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_hosts"},
      {"id": "e2", "source": "fetch_hosts", "target": "apply_patch"},
      {"id": "e3", "source": "apply_patch", "target": "report"}
    ]
  }
}