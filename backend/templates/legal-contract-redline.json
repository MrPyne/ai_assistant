{
  "id": "legal-contract-redline",
  "title": "Legal: Contract Redline Assist",
  "description": "Use an LLM to propose redlines based on standard clauses and produce a trackable redline document.",
  "category": "Legal",
  "tags": ["legal", "contracts", "llm"],
  "sample_input": {"contract_id": "c-1"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "New contract"}
      },
      {
        "id": "fetch",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch contract",
          "config": {
            "method": "GET",
            "url": "https://legal.api/contracts/{{ trigger.contract_id }}"
          }
        }
      },
      {
        "id": "redline",
        "type": "llm",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Propose redlines",
          "config": {
            "prompt": "Propose redlines to this contract: {{ node_results.fetch }}"
          }
        }
      },
      {
        "id": "create_doc",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Create redline doc",
          "config": {
            "method": "POST",
            "url": "https://docs.api/create",
            "body": "{{ node_results.redline }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch"},
      {"id": "e2", "source": "fetch", "target": "redline"},
      {"id": "e3", "source": "redline", "target": "create_doc"}
    ]
  }
}
