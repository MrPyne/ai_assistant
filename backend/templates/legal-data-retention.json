{
  "id": "legal-data-retention",
  "title": "Legal: Data Retention Policy Enforcement",
  "description": "Identify data older than retention policies and orchestrate deletions or archival with approvals.",
  "category": "Legal",
  "tags": ["legal", "data", "retention"],
  "sample_input": {"policy": "custodian-7yrs"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Policy run"}
      },
      {
        "id": "find_data",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Find old data",
          "config": {
            "method": "GET",
            "url": "https://dw.api/find_old?policy={{ trigger.policy }}"
          }
        }
      },
      {
        "id": "request_approval",
        "type": "http",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Request approval",
          "config": {
            "method": "POST",
            "url": "https://legal.api/approve",
            "body": "{{ node_results.find_data }}"
          }
        }
      },
      {
        "id": "execute",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Execute delete/archive",
          "config": {
            "method": "POST",
            "url": "https://archive.api/run",
            "body": "{{ node_results.request_approval }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "find_data"},
      {"id": "e2", "source": "find_data", "target": "request_approval"},
      {"id": "e3", "source": "request_approval", "target": "execute"}
    ]
  }
}
