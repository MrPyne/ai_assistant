{
  "id": "legal-regulatory-alerts",
  "title": "Legal: Regulatory Alerts",
  "description": "Monitor regulatory feeds and notify legal owners for required actions or reviews.",
  "category": "Legal",
  "tags": ["legal", "regulatory", "alerts"],
  "sample_input": {"jurisdiction": "US"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Daily feed"}
      },
      {
        "id": "fetch_feed",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch regulatory feed",
          "config": {
            "method": "GET",
            "url": "https://reg.api/feeds?jurisdiction={{ trigger.jurisdiction }}"
          }
        }
      },
      {
        "id": "filter",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Filter relevant",
          "config": {
            "language": "python",
            "code": "# filter feed\nreturn {\"relevant\": []}"
          }
        }
      },
      {
        "id": "notify",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Notify legal",
          "config": {
            "method": "POST",
            "url": "https://email.api/send",
            "body": "{{ node_results.filter }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_feed"},
      {"id": "e2", "source": "fetch_feed", "target": "filter"},
      {"id": "e3", "source": "filter", "target": "notify"}
    ]
  }
}