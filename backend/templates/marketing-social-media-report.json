{
  "id": "marketing-social-media-report",
  "title": "Marketing: Social Media Weekly Report",
  "description": "Aggregate engagement metrics across channels and prepare a weekly summary for stakeholders.",
  "category": "Marketing",
  "tags": ["marketing", "reporting", "social"],
  "sample_input": {"week_start": "2025-01-06"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Schedule"}
      },
      {
        "id": "fetch",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch metrics",
          "config": {
            "method": "GET",
            "url": "https://social.api/metrics?start={{ trigger.week_start }}"
          }
        }
      },
      {
        "id": "summarize",
        "type": "llm",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Summarize",
          "config": {
            "prompt": "Summarize the following metrics into a short executive paragraph: {{ node_results.fetch }}"
          }
        }
      },
      {
        "id": "deliver",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Post to Slack",
          "config": {
            "method": "POST",
            "url": "https://slack.api/chat.postMessage",
            "body": "{{ node_results.summarize }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch"},
      {"id": "e2", "source": "fetch", "target": "summarize"},
      {"id": "e3", "source": "summarize", "target": "deliver"}
    ]
  }
}