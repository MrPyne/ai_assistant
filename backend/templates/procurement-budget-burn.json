{
  "id": "procurement-budget-burn",
  "title": "Procurement: Budget Burn Monitor",
  "description": "Track spend against procurement budgets and alert when burn rate exceeds thresholds.",
  "category": "Procurement",
  "tags": ["procurement", "budget", "alerts"],
  "sample_input": {"period": "2025-Q3"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Periodic"}
      },
      {
        "id": "fetch_spend",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch spend",
          "config": {
            "method": "GET",
            "url": "https://erp.api/spend?period={{ trigger.period }}"
          }
        }
      },
      {
        "id": "evaluate",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Evaluate burn",
          "config": {
            "language": "python",
            "code": "s = node_results.fetch_spend\nif s.get('burn_rate', 0) > 0.8:\n    return {'alert': True}\nreturn {'alert': False}"
          }
        }
      },
      {
        "id": "alert",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Alert",
          "config": {
            "method": "POST",
            "url": "https://slack.api/post",
            "body": "Budget burn critical"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_spend"},
      {"id": "e2", "source": "fetch_spend", "target": "evaluate"},
      {"id": "e3", "source": "evaluate", "target": "alert"}
    ]
  }
}