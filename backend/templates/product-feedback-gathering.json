{
  "id": "product-feedback-gathering",
  "title": "Product: Feedback Gathering",
  "description": "Aggregate feedback from multiple channels and summarize themes for the product team.",
  "category": "Product",
  "tags": ["product", "feedback", "summarize"],
  "sample_input": {"period": "2025-07"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Monthly"}
      },
      {
        "id": "fetch_ch",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch channels",
          "config": {
            "method": "GET",
            "url": "https://feedback.api/aggregate?period={{ trigger.period }}"
          }
        }
      },
      {
        "id": "summarize",
        "type": "llm",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Summarize themes",
          "config": {
            "prompt": "Summarize feedback themes from: {{ node_results.fetch_ch }}"
          }
        }
      },
      {
        "id": "publish",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Publish",
          "config": {
            "method": "POST",
            "url": "https://docs.api/create",
            "body": "{{ node_results.summarize }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_ch"},
      {"id": "e2", "source": "fetch_ch", "target": "summarize"},
      {"id": "e3", "source": "summarize", "target": "publish"}
    ]
  }
}
