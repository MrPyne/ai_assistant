{
  "id": "product-roadmap-update",
  "title": "Product: Roadmap Update",
  "description": "Collate inputs from sales, CS and analytics and produce a draft roadmap update for stakeholders.",
  "category": "Product",
  "tags": ["product", "roadmap", "collaboration"],
  "sample_input": {"quarter": "Q4-2025"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": { "x": 0, "y": 0 },
        "data": { "label": "Quarterly" }
      },
      {
        "id": "fetch_inputs",
        "type": "http",
        "position": { "x": 220, "y": 0 },
        "data": {
          "label": "Fetch inputs",
          "config": {
            "method": "GET",
            "url": "https://product.api/inputs?quarter={{ trigger.quarter }}"
          }
        }
      },
      {
        "id": "summarize",
        "type": "llm",
        "position": { "x": 440, "y": 0 },
        "data": {
          "label": "Summarize",
          "config": {
            "prompt": "Produce a roadmap update from these inputs: {{ node_results.fetch_inputs }}"
          }
        }
      },
      {
        "id": "publish",
        "type": "http",
        "position": { "x": 660, "y": 0 },
        "data": {
          "label": "Publish",
          "config": {
            "method": "POST",
            "url": "https://docs.api/create",
            "body": "{{ node_results.summarize }}"
          }
        }
      }
    ],
    "edges": [
      { "id": "e1", "source": "in", "target": "fetch_inputs" },
      { "id": "e2", "source": "fetch_inputs", "target": "summarize" },
      { "id": "e3", "source": "summarize", "target": "publish" }
    ]
  }
}