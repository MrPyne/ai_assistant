{
  "id": "reporting-data-quality-trend",
  "title": "Reporting: Data Quality Trend",
  "description": "Track data quality metrics over time and alert on regressions.",
  "category": "Reporting",
  "tags": ["reporting", "data-quality", "analytics"],
  "sample_input": {"window": "30d"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Daily"}
      },
      {
        "id": "compute_metrics",
        "type": "action",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Compute metrics",
          "config": {
            "language": "sql",
            "code": "SELECT metric, value FROM data_quality WHERE ts > now() - interval '{{ trigger.window }}'"
          }
        }
      },
      {
        "id": "detect_regression",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Detect regression",
          "config": {
            "language": "python",
            "code": "# detect drop\nreturn {'regressions': []}"
          }
        }
      },
      {
        "id": "alert",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Alert",
          "config": {
            "method": "POST",
            "url": "https://slack.api/post",
            "body": "Data quality regression detected"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "compute_metrics"},
      {"id": "e2", "source": "compute_metrics", "target": "detect_regression"},
      {"id": "e3", "source": "detect_regression", "target": "alert"}
    ]
  }
}
