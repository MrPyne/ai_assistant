{
  "id": "reporting-executive-summary",
  "title": "Reporting: Executive Summary",
  "description": "Generate a concise executive summary using metrics and LLM-based narration for leadership.",
  "category": "Reporting",
  "tags": ["reporting", "executive", "llm"],
  "sample_input": {"period": "2025-Q3"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Quarterly"}
      },
      {
        "id": "fetch_metrics",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch metrics",
          "config": {
            "method": "GET",
            "url": "https://dw.api/metrics?period={{ trigger.period }}"
          }
        }
      },
      {
        "id": "summarize",
        "type": "llm",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Summarize",
          "config": {
            "prompt": "Create an executive summary from these metrics: {{ node_results.fetch_metrics }}"
          }
        }
      },
      {
        "id": "deliver",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Deliver",
          "config": {
            "method": "POST",
            "url": "https://email.api/send",
            "body": "{{ node_results.summarize }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_metrics"},
      {"id": "e2", "source": "fetch_metrics", "target": "summarize"},
      {"id": "e3", "source": "summarize", "target": "deliver"}
    ]
  }
}