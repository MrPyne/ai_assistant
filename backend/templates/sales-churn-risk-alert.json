{
  "id": "sales-churn-risk-alert",
  "title": "Sales: Churn Risk Alert",
  "description": "Monitor usage metrics and customer signals; if churn risk exceeds threshold, create account task and notify CSMs.",
  "category": "Sales",
  "tags": ["churn", "monitoring", "alerts"],
  "sample_input": {"account_id": "A-100"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Scheduler or webhook"}
      },
      {
        "id": "fetch_usage",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch Usage",
          "config": {
            "method": "GET",
            "url": "https://usage.api/accounts/{{ trigger.account_id }}/metrics"
          }
        }
      },
      {
        "id": "score",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Compute Risk",
          "config": {
            "language": "python",
            "code": "m = json.loads(input.get(\"body\", \"{}\"))\\nrisk = 0\\nif m.get(\"weekly_active_users\", 0) < 10: risk += 50\\nif m.get(\"api_errors\", 0) > 100: risk += 30\\nreturn {\"risk\": risk}"
          }
        }
      },
      {
        "id": "create_task",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Create CSM Task",
          "config": {
            "method": "POST",
            "url": "https://crm/api/accounts/{{ trigger.account_id }}/tasks",
            "body": "{\"title\":\"Churn Risk: {{ node_results.score.risk }}\"}"
          }
        }
      },
      {
        "id": "notify",
        "type": "http",
        "position": {"x": 660, "y": 120},
        "data": {
          "label": "Notify Slack",
          "config": {
            "method": "POST",
            "url": "https://hooks.slack.com/services/...",
            "body": "Account {{ trigger.account_id }} risk={{ node_results.score.risk }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_usage"},
      {"id": "e2", "source": "fetch_usage", "target": "score"},
      {"id": "e3", "source": "score", "target": "create_task"},
      {"id": "e4", "source": "score", "target": "notify"}
    ]
  }
}
