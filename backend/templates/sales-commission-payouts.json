{
  "id": "sales-commission-payouts",
  "title": "Sales: Commission Payouts",
  "description": "Aggregate closed deals, compute commissions and create payout entries for payroll.",
  "category": "Sales",
  "tags": ["sales", "finance", "payroll"],
  "sample_input": {"period": "2025-07"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": { "x": 0, "y": 0 },
        "data": { "label": "Monthly run" }
      },
      {
        "id": "fetch_deals",
        "type": "http",
        "position": { "x": 220, "y": 0 },
        "data": {
          "label": "Fetch closed deals",
          "config": {
            "method": "GET",
            "url": "https://crm.api/deals?closed_month={{ trigger.period }}"
          }
        }
      },
      {
        "id": "calc",
        "type": "action",
        "position": { "x": 440, "y": 0 },
        "data": {
          "label": "Calculate commissions",
          "config": {
            "language": "python",
            "code": "deals = node_results.fetch_deals\\n# apply commission rules\\nreturn {'commissions':[{'rep_id':'u1','amount':100.0}]}"
          }
        }
      },
      {
        "id": "post",
        "type": "http",
        "position": { "x": 660, "y": 0 },
        "data": {
          "label": "Send to Payroll",
          "config": {
            "method": "POST",
            "url": "https://payroll.api/commissions",
            "body": "{{ node_results.calc }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_deals"},
      {"id": "e2", "source": "fetch_deals", "target": "calc"},
      {"id": "e3", "source": "calc", "target": "post"}
    ]
  }
}
