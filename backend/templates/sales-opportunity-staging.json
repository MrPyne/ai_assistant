{
  "id": "sales-opportunity-staging",
  "title": "Sales: Opportunity Staging",
  "description": "Move opportunities between stages and notify account owner on high-value changes.",
  "category": "Sales",
  "tags": ["sales", "crm", "notifications"],
  "sample_input": {"opportunity_id": "opp-456", "new_stage": "proposal"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Stage change event"}
      },
      {
        "id": "update",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Update CRM",
          "config": {
            "method": "PATCH",
            "url": "https://crm.api/opps/{{ trigger.opportunity_id }}",
            "body": {"stage": "{{ trigger.new_stage }}"}
          }
        }
      },
      {
        "id": "check",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "High value check",
          "config": {
            "language": "python",
            "code": "opp = node_results.update\nif opp.get('amount', 0) > 100000:\n    return {'notify': True, 'owner': opp.get('owner_email')}\nreturn {'notify': False}"
          }
        }
      },
      {
        "id": "notify",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Notify owner",
          "config": {
            "method": "POST",
            "url": "https://email.api/send",
            "body": "Notify {{ node_results.check.owner }} about stage change"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "update"},
      {"id": "e2", "source": "update", "target": "check"},
      {"id": "e3", "source": "check", "target": "notify"}
    ]
  }
}