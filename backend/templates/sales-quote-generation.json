{
  "id": "sales-quote-generation",
  "title": "Sales: Quote Generation",
  "description": "Generate a PDF quote from opportunity data and email it to the prospect for review.",
  "category": "Sales",
  "tags": ["sales","pdf","quote"],
  "sample_input": {"opportunity_id":"opp-123"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": { "x": 0, "y": 0 },
        "data": { "label": "Opportunity created" }
      },
      {
        "id": "fetch",
        "type": "http",
        "position": { "x": 220, "y": 0 },
        "data": {
          "label": "Fetch opportunity",
          "config": {
            "method": "GET",
            "url": "https://crm.api/opps/{{ trigger.opportunity_id }}"
          }
        }
      },
      {
        "id": "generate",
        "type": "action",
        "position": { "x": 440, "y": 0 },
        "data": {
          "label": "Generate PDF",
          "config": {
            "language": "python",
            "code": "# create PDF bytes from data\\nreturn b'%PDF-1.4...'"
          }
        }
      },
      {
        "id": "store",
        "type": "http",
        "position": { "x": 660, "y": 0 },
        "data": {
          "label": "Upload attachment",
          "config": {
            "method": "POST",
            "url": "https://files.api/upload",
            "body": "{{ node_results.generate }}"
          }
        }
      },
      {
        "id": "email",
        "type": "http",
        "position": { "x": 880, "y": 0 },
        "data": {
          "label": "Email prospect",
          "config": {
            "method": "POST",
            "url": "https://email.api/send",
            "body": "{\"to\":\"{{ node_results.fetch.contact_email }}\",\"attachment_url\":\"{{ node_results.store.url }}\"}"
          }
        }
      }
    ],
    "edges": [
      { "id": "e1", "source": "in", "target": "fetch" },
      { "id": "e2", "source": "fetch", "target": "generate" },
      { "id": "e3", "source": "generate", "target": "store" },
      { "id": "e4", "source": "store", "target": "email" }
    ]
  }
}
