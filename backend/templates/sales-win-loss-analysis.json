{
  "id": "sales-win-loss-analysis",
  "title": "Sales: Win/Loss Analysis",
  "description": "Collect closed deals and lost opportunities weekly, run NLP to surface reasons and produce a report for leadership.",
  "category": "Sales",
  "tags": ["analytics","nlp","report"],
  "sample_input": {"period":"last_7_days"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Scheduler"}
      },
      {
        "id": "fetch_deals",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch Deals",
          "config": {
            "method": "GET",
            "url": "https://crm/api/deals?closed=true&period={{ trigger.period }}"
          }
        }
      },
      {
        "id": "nlp",
        "type": "llm",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Run LLM Summary",
          "config": {
            "provider": "openai",
            "prompt": "Summarize reasons deals were lost vs won given this dataset: {{ node_results.fetch_deals }}"
          }
        }
      },
      {
        "id": "email",
        "type": "email",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Send Report",
          "config": {
            "to": ["sales-leads@example.com"],
            "subject": "Win/Loss Weekly",
            "body": "{{ node_results.nlp }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_deals"},
      {"id": "e2", "source": "fetch_deals", "target": "nlp"},
      {"id": "e3", "source": "nlp", "target": "email"}
    ]
  }
}
