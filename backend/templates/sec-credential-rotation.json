{
  "id": "sec-credential-rotation",
  "title": "Security: Credential Rotation Reminder",
  "description": "Notify owners when held credentials are due for rotation and optionally rotate via provider APIs.",
  "category": "Security",
  "tags": ["security", "secrets", "rotation"],
  "sample_input": {"credential_id": "cred-123"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Scheduler"}
      },
      {
        "id": "fetch",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Get Credential Metadata",
          "config": {
            "method": "GET",
            "url": "https://secrets.api/creds/{{ trigger.credential_id }}"
          }
        }
      },
      {
        "id": "eval",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Evaluate",
          "config": {
            "language": "python",
            "code": "meta = json.loads(input.get('body','{}'))\nif meta.get('age_days',0) > 90:\n    return {'rotate': True}\nreturn {'rotate': False}"
          }
        }
      },
      {
        "id": "rotate_api",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Rotate via Provider",
          "config": {
            "method": "POST",
            "url": "https://secrets.api/rotate/{{ trigger.credential_id }}"
          }
        }
      },
      {
        "id": "notify",
        "type": "http",
        "position": {"x": 660, "y": 120},
        "data": {
          "label": "Notify Owner",
          "config": {
            "method": "POST",
            "url": "https://hooks.slack.com/services/...",
            "body": "Credential {{ trigger.credential_id }} rotated"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch"},
      {"id": "e2", "source": "fetch", "target": "eval"},
      {"id": "e3", "source": "eval", "target": "rotate_api"},
      {"id": "e4", "source": "rotate_api", "target": "notify"}
    ]
  }
}