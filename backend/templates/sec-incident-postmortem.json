{
  "id": "sec-incident-postmortem",
  "title": "Security: Incident Postmortem",
  "description": "Collect artifacts, run automated timeline reconstruction and generate a postmortem draft for review.",
  "category": "Security",
  "tags": ["security", "incident", "postmortem"],
  "sample_input": {"incident_id": "INC-123"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Manual trigger"}
      },
      {
        "id": "fetch_logs",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch logs",
          "config": {
            "method": "GET",
            "url": "https://logs.api/query?incident={{ trigger.incident_id }}"
          }
        }
      },
      {
        "id": "timeline",
        "type": "llm",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Build timeline",
          "config": {
            "prompt": "Build a concise timeline from these log excerpts: {{ node_results.fetch_logs }}"
          }
        }
      },
      {
        "id": "draft",
        "type": "llm",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Draft postmortem",
          "config": {
            "prompt": "Using the timeline: {{ node_results.timeline }}, draft a postmortem including impact and remediation steps."
          }
        }
      },
      {
        "id": "create_doc",
        "type": "http",
        "position": {"x": 880, "y": 0},
        "data": {
          "label": "Create doc",
          "config": {
            "method": "POST",
            "url": "https://docs.api/create",
            "body": "{{ node_results.draft }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_logs"},
      {"id": "e2", "source": "fetch_logs", "target": "timeline"},
      {"id": "e3", "source": "timeline", "target": "draft"},
      {"id": "e4", "source": "draft", "target": "create_doc"}
    ]
  }
}
