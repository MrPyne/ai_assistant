{
  "id": "sec-phishing-report",
  "title": "Security: Phishing Report Triage",
  "description": "Process user-reported phishing emails: extract metadata, run ML classifier, create tickets for confirmed phishing and notify users.",
  "category": "Security",
  "tags": ["security", "phishing", "triage"],
  "sample_input": {"report_id": "R-1"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "User report"}
      },
      {
        "id": "fetch_email",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch Email",
          "config": {
            "method": "GET",
            "url": "https://mail.api/reports/{{ trigger.report_id }}/email"
          }
        }
      },
      {
        "id": "classify",
        "type": "llm",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Classify Phish",
          "config": {
            "provider": "openai",
            "prompt": "Is this email phishing? Return yes/no and reasons: {{ node_results.fetch_email }}"
          }
        }
      },
      {
        "id": "create_ticket",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Create Ticket",
          "config": {
            "method": "POST",
            "url": "https://it.ticketing/api/incidents",
            "body": "{\"report_id\":\"{{ trigger.report_id }}\",\"result\":\"{{ node_results.classify }}\"}"
          }
        }
      },
      {
        "id": "notify_user",
        "type": "email",
        "position": {"x": 660, "y": 120},
        "data": {
          "label": "Notify Reporter",
          "config": {
            "to": ["{{ node_results.fetch_email.reporter_email }}"],
            "subject": "Phishing report received",
            "body": "Thanks..."
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_email"},
      {"id": "e2", "source": "fetch_email", "target": "classify"},
      {"id": "e3", "source": "classify", "target": "create_ticket"},
      {"id": "e4", "source": "classify", "target": "notify_user"}
    ]
  }
}
