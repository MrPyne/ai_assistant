{
  "id": "sec-security-incident-playbook",
  "title": "Security: Incident Playbook Runner",
  "description": "Given an incident event, run a pre-defined playbook: enrich, notify stakeholders, and open tickets with runbooks.",
  "category": "Security",
  "tags": ["security", "incident", "playbook"],
  "sample_input": { "incident_id": "INC-1" },
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": { "x": 0, "y": 0 },
        "data": { "label": "Incident webhook" }
      },
      {
        "id": "enrich",
        "type": "http",
        "position": { "x": 220, "y": 0 },
        "data": {
          "label": "Enrich Event",
          "config": {
            "method": "POST",
            "url": "https://enrich.api/enrich",
            "body": "{{ trigger }}"
          }
        }
      },
      {
        "id": "create_ticket",
        "type": "http",
        "position": { "x": 440, "y": 0 },
        "data": {
          "label": "Create Incident Ticket",
          "config": {
            "method": "POST",
            "url": "https://it.ticketing/api/incidents",
            "body": "{{ node_results.enrich }}"
          }
        }
      },
      {
        "id": "notify",
        "type": "http",
        "position": { "x": 660, "y": 0 },
        "data": {
          "label": "Notify PagerDuty/Slack",
          "config": {
            "method": "POST",
            "url": "https://hooks.slack.com/services/...",
            "body": "Incident {{ trigger.incident_id }} created"
          }
        }
      }
    ],
    "edges": [
      { "id": "e1", "source": "in", "target": "enrich" },
      { "id": "e2", "source": "enrich", "target": "create_ticket" },
      { "id": "e3", "source": "create_ticket", "target": "notify" }
    ]
  }
}
