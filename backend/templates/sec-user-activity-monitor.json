{
  "id": "sec-user-activity-monitor",
  "title": "Security: User Activity Monitor",
  "description": "Detect anomalous user activity (e.g., sudden downloads or logins from new locations) and create an incident ticket + alert.",
  "category": "Security",
  "tags": ["security", "monitoring", "alerts"],
  "sample_input": {"user_id": "U-1"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Webhook: Auth Event"}
      },
      {
        "id": "fetch_history",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch Recent Activity",
          "config": {
            "method": "GET",
            "url": "https://auth.api/users/{{ trigger.user_id }}/activity"
          }
        }
      },
      {
        "id": "detect",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Detect Anomaly",
          "config": {
            "language": "python",
            "code": "import json\nacts = json.loads(input.get('body','[]'))\n# simplistic rule: more than 5 downloads in 10 minutes\ndownloads = sum(1 for a in acts if a.get('type')=='download')\nif downloads > 5:\n    return {'anomaly': True, 'reason': 'mass_downloads'}\nreturn {'anomaly': False}"
          }
        }
      },
      {
        "id": "create_ticket",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Create Incident",
          "config": {
            "method": "POST",
            "url": "https://it.ticketing/api/incidents",
            "body": "{\"title\":\"Anomalous activity {{ trigger.user_id }}\",\"details\":\"{{ node_results.detect.reason }}\"}"
          }
        }
      },
      {
        "id": "notify",
        "type": "http",
        "position": {"x": 660, "y": 120},
        "data": {
          "label": "Notify SecOps",
          "config": {
            "method": "POST",
            "url": "https://hooks.slack.com/services/...",
            "body": "User {{ trigger.user_id }} anomaly={{ node_results.detect.reason }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_history"},
      {"id": "e2", "source": "fetch_history", "target": "detect"},
      {"id": "e3", "source": "detect", "target": "create_ticket"},
      {"id": "e4", "source": "detect", "target": "notify"}
    ]
  }
}
