{
  "id": "sec-winrm-activity-monitor",
  "title": "Security: WinRM Activity Monitor",
  "description": "Monitor WinRM administrative activity and surface anomalous command execution.",
  "category": "Security",
  "tags": ["security", "windows", "monitoring"],
  "sample_input": {"host": "host-1"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Event"}
      },
      {
        "id": "fetch_cmds",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch commands",
          "config": {"method": "GET", "url": "https://logs.api/winrm?host={{ trigger.host }}"}
        }
      },
      {
        "id": "score",
        "type": "llm",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Score commands",
          "config": {"prompt": "Rate these commands for suspiciousness: {{ node_results.fetch_cmds }}"}
        }
      },
      {
        "id": "alert",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Alert SOC",
          "config": {"method": "POST", "url": "https://alerts.api/create", "body": "{{ node_results.score }}"}
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_cmds"},
      {"id": "e2", "source": "fetch_cmds", "target": "score"},
      {"id": "e3", "source": "score", "target": "alert"}
    ]
  }
}
