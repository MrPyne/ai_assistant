{
  "id": "support-incident-rca",
  "title": "Support: Incident RCA",
  "description": "Collect ticket history, logs and produce a concise RCA draft for review.",
  "category": "Support",
  "tags": ["support", "rca", "incidents"],
  "sample_input": {"incident_id": "inc-7"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Manual trigger"}
      },
      {
        "id": "fetch_history",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch ticket history",
          "config": {
            "method": "GET",
            "url": "https://support.api/history?incident={{ trigger.incident_id }}"
          }
        }
      },
      {
        "id": "collate",
        "type": "llm",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Collate",
          "config": {
            "prompt": "Compile an RCA from these artifacts: {{ node_results.fetch_history }}"
          }
        }
      },
      {
        "id": "create_doc",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Create doc",
          "config": {
            "method": "POST",
            "url": "https://docs.api/create",
            "body": "{{ node_results.collate }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_history"},
      {"id": "e2", "source": "fetch_history", "target": "collate"},
      {"id": "e3", "source": "collate", "target": "create_doc"}
    ]
  }
}
