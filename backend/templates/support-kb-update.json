{
  "id": "support-kb-update",
  "title": "Support: KB Update Reminder",
  "description": "If many tickets reference the same issue, create or update a KB article draft and notify documentation owners.",
  "category": "Support",
  "tags": ["support", "kb", "docs"],
  "sample_input": {"topic": "login-errors"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Scheduler"}
      },
      {
        "id": "fetch_tickets",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {"label": "Fetch Tickets", "config": {"method": "GET", "url": "https://support.api/tickets?topic={{ trigger.topic }}"}}
      },
      {
        "id": "summarize",
        "type": "llm",
        "position": {"x": 440, "y": 0},
        "data": {"label": "Summarize", "config": {"provider": "openai", "prompt": "Create a KB draft from these tickets: {{ node_results.fetch_tickets }}"}}
      },
      {
        "id": "create_draft",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {"label": "Create KB Draft", "config": {"method": "POST", "url": "https://docs.api/kb", "body": "{{ node_results.summarize }}"}}
      },
      {
        "id": "notify",
        "type": "http",
        "position": {"x": 660, "y": 120},
        "data": {"label": "Notify Docs Team", "config": {"method": "POST", "url": "https://hooks.slack.com/services/...", "body": "KB draft created for {{ trigger.topic }}"}}
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_tickets"},
      {"id": "e2", "source": "fetch_tickets", "target": "summarize"},
      {"id": "e3", "source": "summarize", "target": "create_draft"},
      {"id": "e4", "source": "create_draft", "target": "notify"}
    ]
  }
}