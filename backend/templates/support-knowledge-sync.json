{
  "id": "support-knowledge-sync",
  "title": "Support: Knowledge Base Sync",
  "description": "Keep KB articles in sync with product docs by scanning changes and pushing updates.",
  "category": "Support",
  "tags": ["support","kb","docs"],
  "sample_input": {"repo":"docs-repo"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Webhook"}
      },
      {
        "id": "fetch_changes",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch changed files",
          "config": {
            "method": "GET",
            "url": "https://git.api/changes?repo={{ trigger.repo }}"
          }
        }
      },
      {
        "id": "transform",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Transform to KB",
          "config": {
            "language": "python",
            "code": "# convert markdown to KB format\\nreturn {\"articles\": []}"
          }
        }
      },
      {
        "id": "push",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Push to KB",
          "config": {
            "method": "POST",
            "url": "https://kb.api/update",
            "body": "{{ node_results.transform }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_changes"},
      {"id": "e2", "source": "fetch_changes", "target": "transform"},
      {"id": "e3", "source": "transform", "target": "push"}
    ]
  }
}