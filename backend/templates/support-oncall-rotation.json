      },
      {
        "id": "update_schedule",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Update schedule",
          "config": {"method": "POST", "url": "https://calendar.api/update", "body": "{{ node_results.compute_next }}"}
