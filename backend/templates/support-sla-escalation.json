{
  "id": "support-sla-escalation",
  "title": "Support: SLA Escalation",
  "description": "Monitor open tickets for SLA violations and escalate to managers when thresholds are missed.",
  "category": "Support",
  "tags": ["support","sla","escalation"],
  "sample_input": {"queue":"priority"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Scheduler"}
      },
      {
        "id": "fetch_tickets",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch Open Tickets",
          "config": {
            "method": "GET",
            "url": "https://support.api/tickets?queue={{ trigger.queue }}&status=open"
          }
        }
      },
      {
        "id": "eval",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Evaluate SLA",
          "config": {
            "language": "python",
            "code": "tickets = json.loads(input.get('body','[]'))\nescalate = [t for t in tickets if t.get('time_open')>3600]\nreturn {'escalate': len(escalate)}"
          }
        }
      },
      {
        "id": "notify",
        "type": "http",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Notify Managers",
          "config": {
            "method": "POST",
            "url": "https://hooks.slack.com/services/...",
            "body": "SLA escalations: {{ node_results.eval.escalate }}"
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_tickets"},
      {"id": "e2", "source": "fetch_tickets", "target": "eval"},
      {"id": "e3", "source": "eval", "target": "notify"}
    ]
  }
}
