{
  "id": "support-ticket-summary",
  "title": "Support: Ticket Summary Report",
  "description": "Generate weekly summaries of ticket volume, top issues, and agent performance for leadership.",
  "category": "Support",
  "tags": ["support","report","analytics"],
  "sample_input": {"period":"last_7_days"},
  "graph": {
    "nodes": [
      {
        "id": "in",
        "type": "input",
        "position": {"x": 0, "y": 0},
        "data": {"label": "Scheduler"}
      },
      {
        "id": "fetch_data",
        "type": "http",
        "position": {"x": 220, "y": 0},
        "data": {
          "label": "Fetch Ticket Data",
          "config": {
            "method": "GET",
            "url": "https://support.api/tickets?period={{ trigger.period }}"
          }
        }
      },
      {
        "id": "analyze",
        "type": "action",
        "position": {"x": 440, "y": 0},
        "data": {
          "label": "Analyze",
          "config": {
            "language": "python",
            "code": "tickets = json.loads(input.get('body','[]'))\n# compute counts, top issues\nreturn {'summary': {}}"
          }
        }
      },
      {
        "id": "email",
        "type": "email",
        "position": {"x": 660, "y": 0},
        "data": {
          "label": "Email Report",
          "config": {
            "to": ["support-leads@example.com"],
            "subject": "Weekly Support Summary",
            "body": "{{ node_results.analyze.summary }}",
            "body": { "original_config": { "to": ["support-leads@example.com"], "subject": "Weekly Support Summary", "body": "{{ node_results.analyze.summary }}" } }
          }
        }
      }
    ],
    "edges": [
      {"id": "e1", "source": "in", "target": "fetch_data"},
      {"id": "e2", "source": "fetch_data", "target": "analyze"},
      {"id": "e3", "source": "analyze", "target": "email"}
    ]
  }
}
